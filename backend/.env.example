# Server Configuration
PORT=7778
NODE_ENV=development

# Security
JWT_SECRET=your-secure-jwt-secret-here
JWT_EXPIRATION=24h
COOKIE_SECRET=your-secure-cookie-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:7777

# Admin Credentials
ADMIN_EMAIL=admin@cloudauditpro.com
ADMIN_PASSWORD=your-secure-admin-password-here

# API Configuration
API_URL=http://localhost:7778
API_VERSION=v1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Database (if applicable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudauditpro
DB_USER=postgres
DB_PASSWORD=your-secure-db-password-here

# Redis (if applicable)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here

# External Services
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Feature Flags
ENABLE_MFA=true
ENABLE_AUDIT_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_XSS_FILTER=true
ENABLE_FRAME_GUARD=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0 * * *"  # Daily at midnight
BACKUP_RETENTION_DAYS=30

# Email Configuration (if applicable)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@cloudauditpro.com 